<div class="app-card-1 app-panel-super-small">
  <h2 class="page-header">Create Account</h2>
</div>

<div class="app-card-1 app-panel-small">
  <form data-parsley-validate id="createAccountForm" method="POST" action="?" class="form-horizontal ajax">
    <input type="hidden" name="_csrf" value="{{_csrf}}"/>
    <input type="hidden" name="timezone" id="timezone" value=""/>
    
    <div class="form-group form-group-next">
      <label for="email" class="col-sm-4 control-label">Business Email</label>
      <div class="col-sm-8">
        <input type="email" name="email" id="email" placeholder="Email" required=""
               class="form-control" value="{{email}}"/>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-4 control-label">Password</label>
      <div class="col-sm-8">
        <input type="password" name="password" id="password" placeholder="Password" required="" autocomplete="nope"
               data-parsley-errors-container="#error-container-password"
               class="form-control" value="{{password}}" minlength="4" />
        <div id="error-container-password"></div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-main"><i class="fa fa-text fa-user-plus"></i>Create Account</button>
      </div>
      </div>
    </div>
  </form>
</div>

<div id="pageId">page-create-account</div>
